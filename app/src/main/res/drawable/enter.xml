<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">
    <!-- Цвет заливки -->
    <solid android:color="@color/background_nav" />
    <!-- Радиус закругления -->
    <corners android:radius="10dp" />
    <!-- Отступы от края (padding) -->
    <padding
        android:left="15dp"
        android:right="15dp"
        android:top="15dp"
        android:bottom="15dp" />
    <!-- (Опционально) Обводка -->
    <stroke android:width="1dp" android:color="#cad1de" />

</shape>